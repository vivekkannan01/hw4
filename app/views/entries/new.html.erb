<% if @current_user %>
  <h1>New Entry</h1>

  <form action="/entries" method="post" enctype="multipart/form-data">
    <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" name="title" id="title_input" class="form-control">
    </div>

    <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <textarea name="description" id="description_input" class="form-control"></textarea>
    </div>

    <div class="mb-3">
      <label for="occurred_on_input" class="form-label">Occurred On</label>
      <input type="date" name="occurred_on" id="occurred_on_input" class="form-control">
    </div>

    <div class="mb-3">
      <label for="image_input" class="form-label">Image URL (optional)</label>
      <input type="text" name="image" id="image_input" class="form-control">
    </div>

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
    </div>

    <button class="btn btn-primary">Save</button>
    <a href="/places/<%= params["place_id"] %>" class="btn btn-secondary">Cancel</a>
  </form>

<% else %>
  <p>You must be logged in to create a new entry.</p>
  <a href="/login">Login</a>
<% end %>
