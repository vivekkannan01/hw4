<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0"><%= @place["name"] %></h1>
  <div>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary me-2">New Entry</a>
    <a href="/places" class="btn btn-outline-secondary">Back to All Places</a>
  </div>
</div>

<h2 class="mb-4">My Entries</h2>

<div class="container px-0">
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if entry.uploaded_image.attached? %>
            <img src="<%= url_for(entry.uploaded_image) %>" class="card-img-top" alt="Entry Image">
          <% elsif entry["image"].present? %>
            <img src="<%= entry["image"] %>" class="card-img-top" alt="Entry Image">
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= entry["title"] %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
            <p class="card-text"><%= entry["description"] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
